;; Window Management Sequences
;; Leader -> w -> key
;; Uses Raycast window management with -g flag (no focus stealing)

;; Sequences
(defseq win-center (w c))
(defseq win-maximize (w f))
(defseq win-left-half (w h))
(defseq win-bottom-half (w j))
(defseq win-top-half (w k))
(defseq win-right-half (w l))
(defseq win-prev-display (w [))
(defseq win-next-display (w ]))
(defseq win-prev-desktop (w -))
(defseq win-next-desktop (w =))

;; Virtual keys
(defvirtualkeys
  win-center (cmd open -g "raycast://extensions/raycast/window-management/center")
  win-maximize (cmd open -g "raycast://extensions/raycast/window-management/maximize")
  win-left-half (cmd open -g "raycast://extensions/raycast/window-management/left-half")
  win-bottom-half (cmd open -g "raycast://extensions/raycast/window-management/bottom-half")
  win-top-half (cmd open -g "raycast://extensions/raycast/window-management/top-half")
  win-right-half (cmd open -g "raycast://extensions/raycast/window-management/right-half")
  win-prev-display (cmd open -g "raycast://extensions/raycast/window-management/previous-display")
  win-next-display (cmd open -g "raycast://extensions/raycast/window-management/next-display")
  win-prev-desktop (cmd open -g "raycast://extensions/raycast/window-management/previous-desktop")
  win-next-desktop (cmd open -g "raycast://extensions/raycast/window-management/next-desktop")
)
